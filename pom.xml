              </testExcludes>              
           </configuration>               
          </plugin-->          
        </plugins>
      </build>
      <properties>
        <packaging.type>jar</packaging.type>
        <jms.skip>true</jms.skip>
        <skipITs>true</skipITs>
        <cargo.maven.skip>true</cargo.maven.skip>
        <skipTests>true</skipTests>
      </properties>
